<% provide(:title, "Playlists") %>
	<div class = "well well-sm">
		<h3>Playlists <%= link_to 'Add new playlist', new_superadmin_playlist_path, class: 'btn btn-sm btn-primary' %></h3>
		
	</div>

	<div class="panel panel-default">  
 
  	<table class="table table-hover table-striped">	
			<thead>
				<tr>
	    		<th>Name</th>
	     		<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<%= render @playlists.order(name: :asc) %>
			</tbody>
		</table>
	</div>