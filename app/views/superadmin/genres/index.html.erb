<% provide(:title, "Genres") %>
<div class = "row col-md-12">
	<div class = "well well-sm">
		<h3>Genres <%= link_to 'Add new genre', new_superadmin_genre_path, class: 'btn btn-sm btn-primary' %></h3>
		<% unless flash[:notice].blank? %>
			<div class = "alert alert-success">
				<p><%= flash[:notice] %></p>
			</div>
		<% end %>
	</div>	

	<div class="panel panel-default">  
 
  	<table class="table table-hover table-striped">	
			<thead>
				<tr>
	    		<th>Genre</th>
	     		<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<%= render @genre.order(name: :asc) %>
			</tbody>
		</table>
	</div>
</div>