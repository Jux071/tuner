<% provide(:title, "Genres") %>
<div class = "well well-sm well-genres">
	<h3>. <%= link_to new_superadmin_genre_path, class: 'btn btn-sm btn-primary' do %>
			Add New Genre <i class="fa fa-plus"></i> 
      <% end %>
	</h3>
</div>	

<div class="panel panel-default">
	<table class="table table-responsive table-striped">	
		<thead>
			<tr>
	    	<th>Genre</th>
	     	<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<%= render @genre.order(name: :asc) %>
		</tbody>
	</table>
</div>