<% provide(:title, "Albums") %>
<div class = "well well-sm well-albums">
	<h3>. <%= link_to new_superadmin_album_path, class: 'btn btn-sm btn-primary' do %>
			Add New Album  <i class="fa fa-plus"></i> 
      <% end %>
	</h3>

	<% unless flash[:notice].blank? %>
		<div class = "alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
</div>	

<div class="panel panel-default">  
  <div class="panel-heading">
  	<div class=text-center>
  		<div class="form-group">
      	<%= form_tag(superadmin_albums_path, :method => "get", id: "search-form") do %>
        	<%= text_field_tag :search, params[:search], placeholder: "Search albums" %>
        	<%= submit_tag "Search" %>
      	<% end %>
      </div>
    </div>
  </div>
  <table class="table table-hover table-striped">	
		<thead>
			<tr>
				<th></th>
	    	<th>Title</th>
	    	<th>Artist</th>
	    	<th><center>Released</center></th>
	    	<th><center>Genre</center></th>
	     	<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<%= render @albums.order(title: :asc) %>
		</tbody>
	</table>
	<div class="digg_pagination">    
    <center><%= will_paginate @albums %></center>
  </div>
</div>