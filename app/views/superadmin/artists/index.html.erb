<% provide(:title, "Artists") %>
<div class = "well well-sm">
	<h3>Artists <%= link_to 'Add new artist', new_superadmin_artist_path, class: 'btn btn-sm btn-primary' %></h3>
</div>
<div class="panel panel-default">  
  <div class="panel-heading">
  	<div class="form-group">
      <%= form_tag(superadmin_artists_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search artists" %>
        <%= submit_tag "Search" %>
      <% end %>
    </form>
	</div>
  <table class="table table-hover table-striped">	
		<thead>
			<tr>
	    	<th>Artist</th>
	     	<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<%= render @artists.order(name: :asc) %>
		</tbody>
	</table>
</div>
</div>
