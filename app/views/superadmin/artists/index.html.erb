<% provide(:title, "Artists") %>
<div class = "well well-sm well-artists">
	<h3>. <%= link_to new_superadmin_artist_path, class: 'btn btn-sm btn-primary' do %>
			Add New Artist  <i class="fa fa-plus"></i> 
      <% end %>
	</h3>	
</div>
<div class="panel panel-default">  
  <div class="panel-heading">
	  <div class=text-center>
	  	<div class="form-group">
	      <%= form_tag(superadmin_artists_path, :method => "get", id: "search-form") do %>
	        <%= text_field_tag :search, params[:search], placeholder: "Search artists" %>
	        <%= submit_tag "Search" %>
	      <% end %>
	    </div>
    </div>
	</div>
  <table class="table table-hover">	
		<thead>
			<tr>
	    	<th>Artist</th>
	     	<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<%= render @artists.order(name: :asc) %>
		</tbody>
	</table>
	<div class="digg_pagination">    
    <center><%= will_paginate @artists %></center>
  </div>
</div>