<div class="panel-heading">Tracks <span class="badge"><%= @artist.tracks.count %></span>
</div>
<table class = 'table table-striped table-hover'>
	<thead>
		<tr>
			<th>Track</th>
			<th>Album</th>
			<th><center>Duration</center></th>			
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @tracks.each do |track| %>
			<tr>
				<td><%= link_to track.name, superadmin_track_path(track) %></td>
				<td><%= link_to track.album.title, superadmin_album_path(track.album) %></td>
				<td><center><%= track.duration %></center></td>				
				<td>
					<% if logged_in? %>
						<%= link_to edit_superadmin_track_path(track), class: 'btn btn-sm btn-primary' do %>
							<i class="glyphicon glyphicon-edit"></i> Edit
						<% end %>
						<%= link_to superadmin_track_path(track), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' do %>
							<i class="glyphicon glyphicon-trash"></i> Delete
						<% end %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>