<div class="panel-heading">Tracks <span class="badge"><%= @album.tracks.count %></span>
</div>      
  <table class = 'table table-striped table-hover'>
    <thead>
			<tr>
    		<th>Name</th>
    		<th>Duration</th>
    		<th>Actions</th>
			</tr>
		</thead>
		<tbody>
      <% @tracks.each do |track| %>
				<tr>
					<td><%= link_to track.name, track_path(track) %></td>	
					<td><%= track.duration %></td>		
					<td><%= link_to 'Add to Playlist', edit_track_path(track), class: 'btn btn-sm btn-success' %>
	<button type="button" class="btn btn-default btn-sm">
  <span class="glyphicon glyphicon-heart-empty"></span> Add to Favorites
</button>
	<%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-heart-empty" %>
	<% if logged_in? %>
	<%= link_to ' Edit', edit_track_path(track), class: ' btn btn-sm btn-primary' %>
			<%= link_to ' Delete', track_path(track), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %></td>
				</tr>
			<% end %>
			<% end %>
		</tbody>
  </table>