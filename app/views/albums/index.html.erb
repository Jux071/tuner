<div class = "row col-md-12">
	<div class = "well well-sm">
		<h3>Albums</h3>
		<% unless flash[:notice].blank? %>
			<div class = "alert alert-success">
				<p><%= flash[:notice] %></p>
			</div>
		<% end %>
	</div>	

	<div class="panel panel-default">  
  <div class="panel-heading"><strong>Album details</strong></div>
  	<table class="table table-hover table-striped">	
			<thead>
				<tr>
	    		<th>Artist</th>
	    		<th>Title</th>
	    		<th>Released</th>
	    		<th>Genre</th>
	     		<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<%= render @albums.order(title: :asc) %>
			</tbody>
		</table>
	</div>
</div>