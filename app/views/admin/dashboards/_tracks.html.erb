<% @tracks.each do |track| %>
<tr>
	<td><%= link_to track.name, track_path(track) %></td>	
	<td><%= track.duration %></td>	
	<td><%= link_to track.artist.name, artist_path(track.artist_id) %></td>
	<td><%= link_to track.genre.name, genre_path(track.genre_id) %></td>
	<td><%= link_to track.album.title, album_path(track.album_id) %></td>	
	


	<% if logged_in? %>
<td>	<% unless current_user.favorite_tracks.exists?(id: track.id) %>
<%= link_to favorite_tracks_path(track_id: track), method: :post do %>
<i class="glyphicon glyphicon-heart-empty gi-2x" role="button" aria-hidden="true"></i>
<% end %>
<% else %>
<%= link_to favorite_track_path(track), method: :delete do %>
<i class="glyphicon glyphicon-heart gi-2x" role="button" aria-hidden="true"></i>
<% end %>
<% end %>


	<%= link_to edit_admin_track_path(track), class: 'btn btn-sm btn-primary', target: :_blank do %>
<i class="glyphicon glyphicon-edit"></i> Edit
<% end %>

<%= link_to admin_track_path(track), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger', target: :_blank do %>
<i class="glyphicon glyphicon-trash"></i> Delete
<% end %>
<%= link_to track.link, target: :_blank do %>
<span class="glyphicon glyphicon-play gi-2x" role="button" aria-hidden="true"></span>
<% end %>
		<a data-toggle="modal" href="#myModal" class="btn btn btn-danger">Add to playlist</a>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Choose Playlist</h4>
      </div>
      <div class="modal-body">
          <%= form_for PlaylistTrack.new, url: playlist_tracks_path do |form| %>
  	<%= form.collection_select :playlist_id, Playlist.all, :id, :name, { prompt: 'Choose Playlist' }, class: 'form-control' %>
  	<br>
  	<%= form.submit 'Save', method: :post, class: 'btn btn-block btn-primary' %>
  	<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal --></td>
			<% end %>

</td>


</tr>
<% end %>