<%= form_for [:admin, @artist] do |form| %>
	<%= form.label :name %>
	<%= form.text_field :name, class: 'form-control' %>
	<br>
	<%= form.label :artist_info %>
	<%= form.text_field :artist_info, class: 'form-control' %>
	<br>
	<%= form.hidden_field :user_id, :value => current_user.id %>
  <%= form.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-default' %>
<% end %>