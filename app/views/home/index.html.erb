	    		<th></th>
	    		<th></th>
	    		<th></th>
				</tr>
			</thead>

			<tbody>
			  <%= render @tracks %>
							
			</tbody>
		</table>
		<%= will_paginate @tracks %>
	</div>
</div>
<% end %>
</div>

<% unless logged_in? %>
<center>
<%= image_tag('tuner.jpg', alt: "tuner") %>
