<% provide(:title, "Artists") %>
<div class = "well well-sm well-artists">
	<h3>.</h3>
	<% unless flash[:notice].blank? %>
		<div class = "alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
</div>	

<div class="panel panel-default">  
  <div class="panel-heading">
	  <div class=text-center>
	  	<div class="form-group">
	      <%= form_tag(artists_path, :method => "get", id: "search-form") do %>
	        <%= text_field_tag :search, params[:search], placeholder: "Search artists" %>
	        <%= submit_tag "Search" %>
	      <% end %>
	    </div>
    </div>
	</div>
  <table class="table table-hover table-striped">	
		<thead>
			<tr>
	    	<th>Artist</th>
	    	<th><center>Total Albums</center></th>
	    	<th><center>Total Tracks</center></th>
			</tr>
		</thead>

		<tbody>
			<%= render @artist.order(name: :asc) %>
		</tbody>
	</table>
	<div class="digg_pagination">    
    <center><%= will_paginate @artist %></center>
  </div>
</div>