<div class = "row col-md-11">
	<div class = "well">
		<h3>Tracks</h3>
		<% unless flash[:notice].blank? %>
			<div class = "alert alert-success">
				<p><%= flash[:notice] %></p>
			</div>
		<% end %>
	</div>		
	<div class="panel panel-default">  
  <div class="panel-heading"><strong>Track details</strong></div>
  	<table class="table table-hover table-striped">	
			<thead>
				<tr>
	    		<th>Name</th>
	    		<th>Duration</th>
	    		<th>Artist</th>
	    		<th>Genre</th>
	    		<th>Album</th>
	    		<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				<%= render @tracks.order(name: :asc) %>
				
			</tbody>
		</table>
	</div>
</div>