<tr>
	<td><%= link_to track.name, track_path(track) %></td>	
	<td><%= track.duration %></td>	
	<td><%= link_to track.artist.name, artist_path(track.artist_id) %></td>
	<td><%= link_to track.genre.name, genre_path(track.genre_id) %></td>
	<td><%= link_to track.album.title, album_path(track.album_id) %></td>
  <% if logged_in? %>
    <td>
      <% unless current_user.favorite_tracks.exists?(id: track.id) %>
        <%= link_to favorite_tracks_path(track_id: track), method: :post do %>
          <i class="glyphicon glyphicon-heart-empty gi-2x" role="button" aria-hidden="true"></i>
        <% end %>
      <% else %>
        <%= link_to favorite_track_path(track), method: :delete do %>
          <i class="glyphicon glyphicon-heart gi-2x" role="button" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </td>
    <td>
      <%= link_to track.link, target: :_blank do %>
        <span class="glyphicon glyphicon-play gi-2x" role="button" aria-hidden="true"></span>
      <% end %>
    </td>

    <% if current_user.playlists.first.nil? %>
      <td>
        <a data-toggle="modal" href="#myModal" class="btn btn btn-danger">Add New playlist</a>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add New Playlist</h4>
              </div>
              <div class="modal-body">
                <%= form_for Playlist.new do |form| %>
                  <%= form.label :name %>
                  <%= form.text_field :name, class: 'form-control' %>
                  <br>
                  <%= form.hidden_field :user_id, :value => current_user.id %>
                  <%= form.submit 'Save', method: :post, remote: true, class: 'btn btn-block btn-primary' %>
                <% end %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div>
        </div>
      </td>
    <% else %>
      <td>
        <a data-toggle="modal" href="#myModal" class="btn btn-danger">Add To playlist</a>
        <button type="button" data-toggle="modal" data-target="#myModal">Open Modal</button>
        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <%= form_for PlaylistTrack.new, remote: true do |form| %>
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Add track "<%= track.name %>" to playlist</h4>
                </div>
                <div class="modal-body">
                  <%= form.label :playlist_id %>
                  <%= form.collection_select :playlist_id, current_user.playlists, :id, :name, { prompt: 'Choose Playlist' }, class: 'form-control' %>
                  <br>
                  <%= form.hidden_field :track_id, :value => track.id %>
                </div>
                <div class="modal-footer">
                  <%= form.submit 'Save', class: 'btn btn-primary' %>
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </td>
    <% end %>
  <% end %>
  <td>
    <%= link_to 'Add', playlist_tracks_path(track_id: track.id, playlist_id: current_user.playlists.first.id), method: :post, remote: true, class: 'btn btn-sm btn-success' %>
  </td>
</tr>