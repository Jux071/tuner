<tr>
	<td><%= link_to track.name, track_path(track) %></td>	
	<td><%= track.duration %></td>	
	<td><%= link_to track.artist.name, artist_path(track.artist_id) %></td>
	<td><%= link_to track.genre.name, genre_path(track.genre_id) %></td>
		<td><%= link_to track.album.title, album_path(track.album_id) %></td>
	
	
	<td>

	<% if logged_in? %>
	<%- unless current_user.favorite_tracks.exists?(id: track.id) -%>
<%= link_to favorite_tracks_path(track_id: track), method: :post do %>
<span class="glyphicon glyphicon-heart-empty" role="button" aria-hidden="true"></span>
<% end %>
<%- else -%>
<%= link_to favorite_track_path(track), method: :delete do %>
<span class="glyphicon glyphicon-heart" role="button" aria-hidden="true"></span>
<% end %>
<% end %>
<%= link_to 'Add to Playlist', edit_track_path(track), class: 'btn btn-sm btn-success' %>
	<%= link_to edit_track_path(track), class: 'btn btn-sm btn-primary', target: :_blank do %>
<i class="glyphicon glyphicon-edit"></i> Edit
<% end %>

<%= link_to track_path(track), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger', target: :_blank do %>
<i class="glyphicon glyphicon-trash"></i> Delete
<% end %>
		
			<% end %>

</td>


</tr>